<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/image_new_book"
        android:layout_width="207dp"
        android:layout_height="256dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/text_new_book_author"
        android:layout_width="152dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintTop_toBottomOf="@+id/image_new_book"
        tools:layout_editor_absoluteX="44dp"
        tools:text="Нина Князькова" />

    <TextView
        android:id="@+id/text_new_book_name"
        android:layout_width="161dp"
        android:layout_height="26dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintTop_toBottomOf="@+id/text_new_book_author"
        tools:layout_editor_absoluteX="35dp"
        tools:text="Наумовна.Начало" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="INTRO TO"
        app:backgroundTint="#9D51AA"
        app:layout_constraintTop_toBottomOf="@+id/text_new_book_name"
        tools:layout_editor_absoluteX="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>